{% extends "base.html.jinja" %}

{% block title %}
    - Events
{% endblock %}

{% block content %}
    <h1>Events</h1>
    {% if session.user and session.user.is_admin %}
        <a href="/events/create">Create event</a>
    {% endif %}
    <h2>Upcoming events</h2>
    <ul>
        {% for event in events %}
            <li>
                <h3><a href="/events/{{ event.id }}">{{ event.name }}</a></h3>
                <p>Date: {{ event.f_date }}</p>
                <p>Time: {{ event.f_time }}</p>
                <p>Location: {{ event.location }}</p>
                <p>Created by: <a href="/members/{{ event.creator.id }}">{{ event.creator.name }}</a></p>
                {% if session.user and session.user.is_admin %}
                    <a href="/events/edit/{{ event.id }}">Edit</a>
                    <a href="/events/delete/{{ event.id }}">Delete</a>
                {% endif %}
            </li>
        {% endfor %}
    </ul>
    <h2>Past events</h2>
{% endblock %}