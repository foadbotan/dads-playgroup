{% extends "base.html.jinja" %}

{% block title %}
    - Members
{% endblock %}

{% block content %}
    <h1>Members</h1>
    <ul>
        {% for member in members %}
            <li>
                <h3><a href="/members/{{ member.id }}">{{ member.name }}</a></h3>
                <p>Attending:</p>
                <ul>
                    {% for event in member.attending %}
                        <li><a href="/events/{{ event.id }}">{{ event.name }}</a></li>
                    {% endfor %}
                </ul>
                <p>Created:</p>
                <ul>
                    {% for event in member.created %}
                        <li><a href="/events/{{ event.id }}">{{ event.name }}</a></li>
                    {% endfor %}
                </ul>
            </li>
        {% endfor %}
    </ul>
{% endblock %}