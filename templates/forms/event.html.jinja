{% extends "base.html.jinja" %}

{% block title %}
   - {{ title }}
{% endblock %}

{% block content %}
    <h1>{{ title }}</h1>
    <form method="POST">
        <p>
            <label for="name">Name:</label>
            <input type="text" value="{{ event.name }}" id="name" name="name" required>
        <p>
            <label for="date">Date:</label>
            <input type="date" value="{{ event.date }}" id="date" name="date" required>
        </p>
        <p>
            <label for="time">Time:</label>
            <input type="time" value="{{ event.time }}" id="time" name="time" required>
        </p>
        <p>
            <label for="location">Location:</label>
            <input type="text" value="{{ event.location }}" id="location" name="location" required>
        </p>
        <p>
            <label for="description">Description:</label>
            <input type="text" value="{{ event.description }}" id="description" name="description" required>
        </p>
        <p>
            <label for="image_url">Image URL:</label>
            <input type="text" value="{{ event.image_url }}" id="image_url" name="image_url" required>
        </p>
        <button type="submit">{{ button_text }}</button>
    </form>
{% endblock %}