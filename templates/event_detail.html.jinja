{% extends "base.html.jinja" %}

{% block title %}{% endblock %}

{% block content %}
    <h1>{{ event.name }}</h1>
    <p>Date: {{ event.f_date }}</p>
    <p>Time: {{ event.f_time }}</p>
    <p>Location: {{ event.location }}</p>
    <p>Description: {{ event.description }}</p>
    <p>Attending:</p>
    <ul>
        {% for attendee in event.attendees %}
            <li><a href="/members/{{ attendee.id }}">{{ attendee.name }}</a></li>
        {% endfor %}
    </ul>
{% endblock %}